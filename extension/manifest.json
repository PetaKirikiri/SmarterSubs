{
  "manifest_version": 3,
  "name": "SmarterSubs Extension",
  "version": "1.0.0",
  "description": "Extract VTT files and metadata from Netflix pages",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["*://www.netflix.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/watch/*"],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SmarterSubs"
  }
}
